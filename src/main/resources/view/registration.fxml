<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="450.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.171" fx:controller="client.controllers.Registration">
   <VBox layoutX="250.0" layoutY="69.0" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="50.0"
         AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
      <Label alignment="CENTER" prefHeight="42.0" prefWidth="500.0" text="Registration">
         <font>
            <Font name="Cambria" size="36.0"/>
         </font>
      </Label>
      <Label text="LOGIN">
         <font>
            <Font name="Cambria" size="13.0"/>
         </font>
         <VBox.margin>
            <Insets bottom="5.0" top="20.0"/>
         </VBox.margin>
      </Label>
      <TextField fx:id="loginFld" prefHeight="25.0">
         <padding>
            <Insets left="5.0"/>
         </padding>
      </TextField>
      <Label text="PASSWORD">
         <font>
            <Font size="13.0"/>
         </font>
         <padding>
            <Insets bottom="5.0" top="15.0"/>
         </padding>
      </Label>
      <PasswordField fx:id="passwordFldTop" prefHeight="25.0" prefWidth="500.0">
         <padding>
            <Insets left="5.0"/>
         </padding>
      </PasswordField>
      <Label text="PASSWORD">
         <font>
            <Font size="13.0"/>
         </font>
         <padding>
            <Insets bottom="5.0" top="15.0"/>
         </padding>
      </Label>
      <PasswordField fx:id="passwordFldBtm" prefHeight="25.0" prefWidth="500.0">
         <padding>
            <Insets left="5.0"/>
         </padding>
      </PasswordField>
      <Button fx:id="registrationBtn" mnemonicParsing="false" onAction="#checkAndRegistration" prefHeight="25.0"
              prefWidth="500.0" text="Registration">
         <font>
            <Font name="Cambria" size="15.0"/>
         </font>
         <VBox.margin>
            <Insets top="25.0"/>
         </VBox.margin>
      </Button>
      <Hyperlink fx:id="registrationLink" onAction="#changeSceneToCreateNewAccount" prefHeight="25.0" prefWidth="155.0"
                 text="Already have an account?" underline="true">
         <font>
            <Font name="Cambria" size="13.0"/>
         </font>
         <VBox.margin>
            <Insets top="20.0"/>
         </VBox.margin>
      </Hyperlink>
   </VBox>
</AnchorPane>
