<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.171" fx:controller="client.controllers.Welcome">
   <VBox layoutX="50.0" layoutY="53.0" prefHeight="535.0" prefWidth="563.0" AnchorPane.bottomAnchor="50.0"
         AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
      <AnchorPane prefHeight="44.0" prefWidth="500.0">
         <Label alignment="CENTER" layoutX="153.0" layoutY="35.0" prefHeight="42.0" prefWidth="500.0" text="Welcome!"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <font>
               <Font name="Cambria" size="36.0"/>
            </font>
         </Label>
      </AnchorPane>
      <VBox prefHeight="437.0" prefWidth="500.0">
         <VBox.margin>
            <Insets top="20.0"/>
         </VBox.margin>
         <Label text="LOGIN">
            <font>
               <Font name="Cambria" size="13.0"/>
            </font>
            <VBox.margin>
               <Insets bottom="5.0"/>
            </VBox.margin>
         </Label>
         <TextField fx:id="loginFld" prefHeight="25.0">
            <padding>
               <Insets left="5.0"/>
            </padding>
         </TextField>
         <Label text="PASSWORD">
            <font>
               <Font size="13.0"/>
            </font>
            <VBox.margin>
               <Insets bottom="5.0" top="15.0"/>
            </VBox.margin>
         </Label>
         <PasswordField fx:id="passwordFld" prefHeight="25.0" prefWidth="500.0">
            <padding>
               <Insets left="5.0"/>
            </padding>
         </PasswordField>
         <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#checkLoginAndPassword" prefHeight="25.0"
                 prefWidth="500.0" text="Login">
            <font>
               <Font name="Cambria" size="15.0"/>
            </font>
            <VBox.margin>
               <Insets top="20.0"/>
            </VBox.margin>
         </Button>
         <Hyperlink fx:id="createAccountLink" onAction="#changeSceneToCreateNewAccount" prefHeight="25.0"
                    prefWidth="152.0" text="Already have an account?" underline="true">
            <VBox.margin>
               <Insets top="20.0"/>
            </VBox.margin>
            <font>
               <Font name="Cambria" size="13.0"/>
            </font>
         </Hyperlink>
      </VBox>
   </VBox>
</AnchorPane>
